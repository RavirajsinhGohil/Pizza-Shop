@model Repository.ViewModel.ProfileChangePasswordViewModel;


<div class="add_user_heading d-flex justify-content-between">
    <div class="fw-bold fs-2">Change Password</div>
</div>

<form method="post" class="ProfileChangeDiv py-3 d-flex flex-column">
    <div class="mb-3">
        Enter a new password to update your account credentials
    </div>
    <div>
        <div class="form-floating mb-3">
            <input type="password" class="form-control add_user_input w-50 " id="floatingInput"
                asp-for="CurrentPassword" placeholder="abc@123">
            <label for="floatingInput">Current Password*</label>
            <span asp-validation-for="CurrentPassword" class="text-danger"></span>
        </div>
        <div class="form-floating mb-3">
            <input type="password" class="form-control add_user_input w-50 " id="floatingInput" asp-for="NewPassword"
                placeholder="abc@123">
            <label for="floatingInput">New Password*</label>
            <span asp-validation-for="NewPassword" class="text-danger"></span>
        </div>
        <div class="form-floating mb-3">
            <input type="password" class="form-control add_user_input w-50 " id="floatingInput"
                asp-for="ConfirmPassword" placeholder="abc@123">
            <label for="floatingInput">Confirm New Password*</label>
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
    </div>
    <div>
        <button type="submit" class="btn btn-primary me-2">Submit</button>
        <a class="btn border-primary">Cancel</a>
    </div>
</form>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script
        src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>